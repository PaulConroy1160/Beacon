<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
            android:background="#403c61"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/userPicLabel"
            android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="#403c61"
            android:gravity="center_vertical|left"
                android:layout_gravity="center"
            android:textColor="#f45e5e"
            android:layout_weight=".3" />

            <LinearLayout
            android:layout_width="0dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_weight=".7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/messageUserlabel"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/routeLabel"
                        android:background="#403c61"
                        android:text="PLACEHOLDER"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal|left"
                        android:gravity="center_vertical" />


                    <TextView
                        android:id="@+id/messagelabel"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/routeLabel"
                        android:background="#403c61"
                        android:text="PLACEHOLDER"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#b9b9b9"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal|left"
                        android:gravity="center_vertical" />


                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/deletebtn"
                    android:paddingRight="20dp"
                    android:id="@+id/connDeleteBTN"
                    android:background="@null"
                    android:layout_gravity="center" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#252339"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />


</FrameLayout>